! remove scroll bar
URxvt.scrollBar: false

! setup fonts 
URxvt.font: xft:DejaVu Sans Mono:style=book:antialias=true:pixelsize=14
URxvt.boldFont: xft:DejaVu Sans Mono:style=bold:antialias=true:pixelsize=14
URxvt.letterSpace: -1

! setup the transparancy
URxvt.transparent: true
URxvt.shading: 10
URxvt.depth: 32

! perl scripts
URxvt.perl-ext-common: keyboard-select,selection-to-clipboard
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keyboard-select.clipboard: true

