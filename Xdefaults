# remove scroll bar
URxvt.scrollBar: false

# setup fonts 
URxvt.font: xft:DejaVuSansMono Nerd Font Mono:style=Book:antialias=true:pixelsize=14,xft:DejaVu Sans Mono:antialias=true:pixelsize=14,xft:FontAwesome:style=Regular:antialias=true:pixelsize=14
URxvt.boldFont: xft:DejaVuSansMono Nerd Font Mono:style=Bold:antialias=true:pixelsize=14,xft:DejaVu Sans Mono:style=bold:antialias=true:pixelsize=14
URxvt.letterSpace: -1

# setup the transparancy
URxvt.transparent: true
URxvt.shading: 50
URxvt.depth: 32

# some basic coloring (thanks to Luke Smith xyz)
URxvt.foreground: white
URxvt.background: black
URxvt.cursorColor: magenta

